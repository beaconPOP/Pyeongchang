                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/stamp8"
                android:src="@drawable/stamp_8"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/stamp9"
                android:src="@drawable/stamp_9"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/stamp10"
                android:src="@drawable/stamp_10"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/stamp11"
                android:src="@drawable/stamp_11"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/stamp12"
                android:src="@drawable/stamp_12"/>

            <ImageView
                android:id="@+id/stamp13"
