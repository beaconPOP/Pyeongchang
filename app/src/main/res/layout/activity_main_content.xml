<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.becomebeacon.beaconlocker.MainActivity"
    tools:showIn="@layout/activity_main_slide">


    <ListView
        android:id="@+id/ble_list"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="10dp"
        android:divider="#f4f4f4">

    </ListView>

    <ListView
        android:id="@+id/scan_list"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:dividerHeight="10dp"
        android:divider="#f4f4f4">


    </ListView>

    <TextView
        android:id="@+id/text_have_no_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_ble"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
